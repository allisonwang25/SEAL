import java.util.*;

public class main {
  
 public static void main(String[] args)
 {
 Scanner pencil = new Scanner(System.in);
  System.out.println("hey there you procrastinator, you lazy human--what would you like to do to evade productivity?");
  while(true){
  System.out.println("(1)Hangman : word wrong --> neck gone \n(2) pressTheP : press the 'p' and nothing else!");
  int input = pencil.nextInt();
  pencil.nextLine();
  if(input==1)
  	Hangman.run();
if(input==2)
	pressTheP.run();
System.out.println("(1)quit or (2) play again?");
input = pencil.nextInt();
pencil.nextLine();
if(input==1)
	break;
}
 }
 
 public static void pressTheP()
 {
	pressTheP();
 }
 public static void Hangman()
 {
 	Hangman();
 }

}
